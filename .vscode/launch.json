    "version": "0.2.0",
    "configurations": [
        {
            "name": "Angular: Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/turmas",
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
            "webpack:///./*": "${webRoot}/*"
            },
            "sourceMaps": true,
            "skipFiles": ["node_modules/**/*.js"],
            "runtimeArgs": ["--incognito"]
            //,
            //"userDataDir": "${workspaceFolder}/.vscode/chrome",
            //"preLaunchTask": "start-server-and-test"

        }
    ]
}
